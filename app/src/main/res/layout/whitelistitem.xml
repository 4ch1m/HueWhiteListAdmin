<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:minWidth="40dp"
                  android:gravity="right"
                  android:orientation="horizontal">

        <TextView android:id="@+id/whitelistentryitem_position"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingRight="3dp"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView android:id="@+id/whitelistentryitem_username"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:singleLine="true"
                  android:textColor="@android:color/white"/>

        <TextView android:id="@+id/whitelistentryitem_appname"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:singleLine="true"
                  android:textColor="@android:color/darker_gray"/>

        <TextView android:id="@+id/whitelistentryitem_devicename"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

</LinearLayout>
